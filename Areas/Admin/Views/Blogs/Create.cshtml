@model Project_sem_3.Models.Blog;

@{
    Layout = "_Admin";
}

<div class="d-flex flex-wrap align-items-center justify-content-between gap-3 mb-24">
    <h6 class="fw-semibold mb-0">Add Blogs</h6>
</div>

<div class="card h-100 p-0 radius-12">
    <div class="card-body p-24">
        <div class="row justify-content-center">
            <div class="col-xxl-6 col-xl-8 col-lg-10">
                <div class="card border">
                    <div class="card-body">

                        <form asp-controller="Blogs" asp-action="Create" enctype="multipart/form-data" method="post">
                            <div class="mb-20">
                                <label for="name"
                                       class="form-label fw-semibold text-primary-light text-sm mb-8">
                                    BlogCategory
                                    <span class="text-danger-600">*</span>
                                </label>
                                <select asp-for="BlogCategoryId" asp-items="ViewBag.BlogCategoriList" class="form-control">
                                    <option value="">--Chọn ứng viên--</option>
                                </select>
                                <span asp-validation-for="BlogCategoryId" class="text-danger"></span>
                            </div>

                            <div class="mb-20">
                                <label for="name"
                                       class="form-label fw-semibold text-primary-light text-sm mb-8">
                                    Managers
                                    <span class="text-danger-600">*</span>
                                </label>
                                <select asp-for="ManagerId" asp-items="ViewBag.ManagerList" class="form-control">
                                    <option value="">--Chọn ứng viên--</option>
                                </select>
                                <span asp-validation-for="ManagerId" class="text-danger"></span>
                            </div>
                             <div class="mb-20">
                                <label for="name"
                                       class="form-label fw-semibold text-primary-light text-sm mb-8">
                                    Title
                                    <span class="text-danger-600">*</span>
                                </label>
                                <input type="text" asp-for="Title" class="form-control radius-8" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="mb-20">
                                <label for="name"
                                       class="form-label fw-semibold text-primary-light text-sm mb-8">
                                    Slug
                                    <span class="text-danger-600">*</span>
                                </label>
                                <input type="text" asp-for="Slug" class="form-control radius-8" />
                                <span asp-validation-for="Slug" class="text-danger"></span>
                            </div>

                            <div class="mb-20">
                                <label for="name"
                                       class="form-label fw-semibold text-primary-light text-sm mb-8">
                                    Tags
                                    <span class="text-danger-600">*</span>
                                </label>
                                <input type="text" asp-for="Tags" class="form-control radius-8" />
                                <span asp-validation-for="Tags" class="text-danger"></span>
                            </div>
                            <div class="mb-20">
                                <label for="name"
                                       class="form-label fw-semibold text-primary-light text-sm mb-8">
                                    Views
                                    <span class="text-danger-600">*</span>
                                </label>
                                <input type="text" asp-for="Views" class="form-control radius-8" />
                                <span asp-validation-for="Views" class="text-danger"></span>
                            </div>
                            <div class="mb-20">
                                <label for="desc"
                                       class="form-label fw-semibold text-primary-light text-sm mb-8">Content</label>
                                <textarea class="form-control radius-8" asp-for="Content"></textarea>
                                <span asp-validation-for="Content" class="text-danger"></span>
                            </div>
                            <div class="mb-20">
                                <label for="name"
                                       class="form-label fw-semibold text-primary-light text-sm mb-8">
                                    Image
                                    <span class="text-danger-600">*</span>
                                </label>
                                <input type="file" name="uploadfile" class="form-control radius-8" />
                            </div>
                            <div class="mb-20">
                                <label for="name"
                                       class="form-label fw-semibold text-primary-light text-sm mb-8">
                                    CreatedAt
                                    <span class="text-danger-600">*</span>
                                </label>
                                <input type="date" asp-for="CreatedAt" class="form-control radius-8" />
                                <span asp-validation-for="CreatedAt" class="text-danger"></span>
                            </div>
                            <div class="mb-20">
                                <label class="form-label fw-semibold text-primary-light text-sm mb-8">
                                    Status <span class="text-danger-600">*</span>
                                </label>

                                <div class="form-check form-switch">
                                    <input type="checkbox"
                                           class="form-check-input"
                                           id="statusSwitch"
                                           name="Status"
                                           value="1"
                                           @(Model != null && Model.Status == 1 ? "checked" : "") />
                                    <label class="form-check-label" for="statusSwitch">
                                        @(Model != null && Model.Status == 1 ? "Active" : "Inactive")
                                    </label>
                                </div>
                            </div>
                            <div class="d-flex align-items-center justify-content-center gap-3">
                                <a asp-controller="Blogs" asp-action="Index"
                                   class="border border-danger-600 bg-hover-danger-200 text-danger-600 text-md px-56 py-11 radius-8">
                                    Cancel
                                </a>
                                <button type="submit"
                                        class="btn btn-primary border border-primary-600 text-md px-56 py-12 radius-8">
                                    Save
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

