@model Project_sem_3.Models.ResultDetail

<h2 class="mt-3 mb-4 text-danger">Delete Confirmation</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this record?
</div>

<div class="card p-3">
    <dl class="row">
        <dt class="col-sm-3">Question</dt>
        <dd class="col-sm-9">@Model.Question?.QuestionTitle</dd>

        <dt class="col-sm-3">Answer</dt>
        <dd class="col-sm-9">@Model.Answer?.AnswerContent</dd>

        <dt class="col-sm-3">Mark</dt>
        <dd class="col-sm-9">@Model.Mark</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
