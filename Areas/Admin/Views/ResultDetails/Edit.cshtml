@model Project_sem_3.Models.ResultDetail
@{
    ViewData["Title"] = "Edit Result Detail";
}

<h2 class="mt-3 mb-4">Edit Result Detail</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="ResultId" class="form-label"></label>
        <select asp-for="ResultId" asp-items="ViewBag.ResultId" class="form-select"></select>
    </div>
    <div class="mb-3">
        <label asp-for="QuestionId" class="form-label"></label>
        <select asp-for="QuestionId" asp-items="ViewBag.QuestionId" class="form-select"></select>
    </div>
    <div class="mb-3">
        <label asp-for="AnswerId" class="form-label"></label>
        <select asp-for="AnswerId" asp-items="ViewBag.AnswerId" class="form-select"></select>
    </div>
    <div class="mb-3">
        <label asp-for="Mark" class="form-label"></label>
        <input asp-for="Mark" class="form-control" />
    </div>
    <button type="submit" class="btn btn-warning">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
