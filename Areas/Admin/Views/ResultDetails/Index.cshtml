@using X.PagedList
@model IPagedList<Project_sem_3.Models.ResultDetail>
@using X.PagedList.Mvc.Core;

@{
    ViewData["Title"] = "Result Details";
}

<h2 class="mt-3 mb-4">Result Details</h2>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Result</th>
            <th>Question</th>
            <th>Answer</th>
            <th>Mark</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.ResultId</td>
                <td>@item.Question?.QuestionTitle</td>
                <td>@item.Answer?.AnswerContent</td>
                <td>@item.Mark</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-center">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions { Display = PagedListDisplayMode.IfNeeded })
</div>

<a asp-action="Create" class="btn btn-primary mt-3">+ Create New</a>
