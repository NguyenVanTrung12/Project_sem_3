@model Project_sem_3.Models.Manager
@{
    Layout = "_Admin";
    ViewData["Title"] = "Edit Manager";
}

<div class="d-flex flex-wrap align-items-center justify-content-between gap-3 mb-24">
    <h6 class="fw-semibold mb-0">Edit Manager</h6>
    <ul class="d-flex align-items-center gap-2">
        <li class="fw-medium">
            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index"
               class="d-flex align-items-center gap-1 hover-text-primary">
                <iconify-icon icon="solar:home-smile-angle-outline" class="icon text-lg"></iconify-icon>
                Dashboard
            </a>
        </li>
        <li>-</li>
        <li class="fw-medium">Edit Manager</li>
    </ul>
</div>

<div class="card h-100 p-0 radius-12">
    <div class="card-body p-24">
        <div class="row justify-content-center">
            <div class="col-xxl-6 col-xl-8 col-lg-10">
                <div class="card border">
                    <div class="card-body">

                        <form asp-action="Edit" method="post" enctype="multipart/form-data"
                              onsubmit="return confirm('Bạn có chắc muốn lưu thay đổi cho người quản lý này không?');">
                            <input type="hidden" asp-for="Id" />

                            <div class="row">

                                <!-- Username -->
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Username" class="form-label fw-semibold text-primary-light text-sm mb-8"></label>
                                    <input asp-for="Username" class="form-control radius-8" placeholder="Enter username" />
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>

                                <!-- Password -->
                                <div class="col-md-6 mb-3">
                                    <label asp-for="PasswordHash" class="form-label fw-semibold text-primary-light text-sm mb-8"></label>
                                    <input asp-for="PasswordHash" type="password" class="form-control radius-8" placeholder="Enter password" />
                                    <span asp-validation-for="PasswordHash" class="text-danger"></span>
                                </div>

                                <!-- Fullname -->
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Fullname" class="form-label fw-semibold text-primary-light text-sm mb-8"></label>
                                    <input asp-for="Fullname" class="form-control radius-8" placeholder="Enter full name" />
                                    <span asp-validation-for="Fullname" class="text-danger"></span>
                                </div>

                                <!-- Email -->
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Email" class="form-label fw-semibold text-primary-light text-sm mb-8"></label>
                                    <input asp-for="Email" type="email" class="form-control radius-8" placeholder="Enter email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <!-- Phone -->
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Phone" class="form-label fw-semibold text-primary-light text-sm mb-8"></label>
                                    <input asp-for="Phone" class="form-control radius-8" placeholder="Enter phone number" />
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>

                                <!-- Role -->
                                <div class="col-md-6 mb-3">
                                    <label asp-for="RoleId" class="form-label fw-semibold text-primary-light text-sm mb-8"></label>
                                    <select asp-for="RoleId" asp-items="ViewBag.RoleId" class="form-control radius-8 form-select">
                                        <option value="">-- Select Role --</option>
                                    </select>
                                    <span asp-validation-for="RoleId" class="text-danger"></span>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-semibold text-primary-light text-sm mb-8">Avatar (Image)</label>
                                    <input type="file" name="uploadfile" class="form-control radius-8" accept="image/*" />
                                    <span class="text-secondary text-sm">Select a representative image for the manager</span>
                                </div>

                                <!-- ✅ Hiển thị ảnh hiện tại -->
                                <div class="col-md-6 mb-3 text-center">
                                    <label class="form-label fw-semibold text-primary-light text-sm mb-8">Current Avatar</label>
                                    @if (!string.IsNullOrEmpty(Model.Image))
                                    {
                                        <div>
                                            <img src="@Model.Image" alt="Avatar" class="img-thumbnail radius-12" style="max-width:150px; height:auto;" />
                                        </div>
                                        <!-- ✅ Lưu ảnh cũ để nếu không chọn ảnh mới vẫn giữ -->
                                        <input type="hidden" name="OldImage" value="@Model.Image" />
                                    }
                                    else
                                    {
                                        <p class="text-muted fst-italic">No avatar uploaded.</p>
                                    }
                                </div>

                                <!-- CreatedAt -->
                                <div class="col-md-6 mb-3">
                                    <label asp-for="CreatedAt" class="form-label fw-semibold text-primary-light text-sm mb-8"></label>
                                    <input asp-for="CreatedAt" type="date" class="form-control radius-8" />
                                    <span asp-validation-for="CreatedAt" class="text-danger"></span>
                                </div>
                                <!-- Status -->
                                <div>
                                    <label class="form-label fw-semibold">Status</label>
                                    <div class="form-check form-switch">
                                        <input type="checkbox"
                                               class="form-check-input"
                                               id="statusSwitch"
                                               name="Status"
                                               value="1"
                                        @(Model != null && Model.Status == 1 ? "checked" : "") />
                                        <label class="form-check-label" for="statusSwitch">
                                            @(Model != null && Model.Status == 1 ? "Active" : "Inactive")
                                        </label>
                                    </div>

                                </div>
                                <!-- Buttons -->
                                <div class="d-flex align-items-center justify-content-center gap-3">
                                    <a asp-action="Index" class="border border-danger-600 bg-hover-danger-200 text-danger-600 text-md px-56 py-11 radius-8 text-decoration-none">Cancel</a>
                                    <button type="submit" class="btn btn-primary border border-primary-600 text-md px-56 py-12 radius-8">Save</button>
                                </div>

                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    function toggleStatusLabel(checkbox) {
        const label = document.getElementById('statusLabel');
        if (checkbox.checked) {
            label.textContent = 'Active';
        } else {
            label.textContent = 'Inactive';
        }
    }
</script>