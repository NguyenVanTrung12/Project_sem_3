@model Project_sem_3.Models.Manager

@{
    ViewData["Title"] = "Create";
    Layout = "_Admin"; // giữ layout admin
}

<div class="d-flex flex-wrap align-items-center justify-content-between gap-3 mb-24">
    <h6 class="fw-semibold mb-0">Add Manager</h6>
    <ul class="d-flex align-items-center gap-2">
        <li class="fw-medium">
            <a asp-action="Index" asp-controller="Manager"
               class="d-flex align-items-center gap-1 hover-text-primary">
                <iconify-icon icon="solar:home-smile-angle-outline"
                              class="icon text-lg"></iconify-icon>
                Dashboard
            </a>
        </li>
        <li>-</li>
        <li class="fw-medium">Add Manager</li>
    </ul>
</div>

<div class="card h-100 p-0 radius-12">
    <div class="card-body p-24">
        <div class="row justify-content-center">
            <div class="col-xxl-6 col-xl-8 col-lg-10">
                <div class="card border">
                    <div class="card-body">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-20"></div>

                            <div class="mb-20">
                                <label asp-for="Username" class="form-label fw-semibold text-primary-light text-sm mb-8"></label>
                                <input asp-for="Username" class="form-control radius-8" placeholder="Enter username" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>

                            <div class="mb-20">
                                <label asp-for="PasswordHash" class="form-label fw-semibold text-primary-light text-sm mb-8"></label>
                                <input asp-for="PasswordHash" type="password" class="form-control radius-8" placeholder="Enter password" />
                                <span asp-validation-for="PasswordHash" class="text-danger"></span>
                            </div>

                            <div class="mb-20">
                                <label asp-for="Fullname" class="form-label fw-semibold text-primary-light text-sm mb-8"></label>
                                <input asp-for="Fullname" class="form-control radius-8" placeholder="Enter full name" />
                                <span asp-validation-for="Fullname" class="text-danger"></span>
                            </div>

                            <div class="mb-20">
                                <label asp-for="Email" class="form-label fw-semibold text-primary-light text-sm mb-8"></label>
                                <input asp-for="Email" type="email" class="form-control radius-8" placeholder="Enter email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="mb-20">
                                <label asp-for="Phone" class="form-label fw-semibold text-primary-light text-sm mb-8"></label>
                                <input asp-for="Phone" class="form-control radius-8" placeholder="Enter phone number" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>

                            <div class="mb-20">
                                <label asp-for="RoleId" class="form-label fw-semibold text-primary-light text-sm mb-8"></label>
                                <select asp-for="RoleId" asp-items="ViewBag.RoleId" class="form-control radius-8 form-select">
                                    <option value="">-- Chọn quyền --</option>
                                </select>
                                <span asp-validation-for="RoleId" class="text-danger"></span>
                            </div>

                            <div class="d-flex align-items-center justify-content-center gap-3">
                                <a asp-action="Index" class="border border-danger-600 bg-hover-danger-200 text-danger-600 text-md px-56 py-11 radius-8 text-decoration-none">Cancel</a>
                                <button type="submit" class="btn btn-primary border border-primary-600 text-md px-56 py-12 radius-8">Save</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
