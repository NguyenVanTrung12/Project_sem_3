@model Project_sem_3.Models.Banner

@{
    Layout = "_Admin";
}

<div class="d-flex flex-wrap align-items-center justify-content-between gap-3 mb-24">
    <h6 class="fw-semibold mb-0">Edit Banner</h6>
    <ul class="d-flex align-items-center gap-2">
        <li class="fw-medium">
            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index"
               class="d-flex align-items-center gap-1 hover-text-primary">
                <iconify-icon icon="solar:home-smile-angle-outline"
                              class="icon text-lg"></iconify-icon>
                Admin Dashboard
            </a>
        </li>
        <li>-</li>
        <li class="fw-medium">Edit Banner</li>
    </ul>
</div>

<div class="card h-100 p-0 radius-12">
    <div class="card-body p-24">
        <div class="row justify-content-center">
            <div class="col-xxl-6 col-xl-8 col-lg-10">
                <div class="card border">
                    <div class="card-body">
                        <h6 class="text-md text-primary-light mb-16">
                            Banner Information
                        </h6>

                        <form asp-action="Edit" enctype="multipart/form-data">
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="Image" />

                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="mb-20">
                                <label for="Name"
                                       class="form-label fw-semibold text-primary-light text-sm mb-8">
                                    Banner Name <span class="text-danger-600">*</span>
                                </label>
                                <input asp-for="Name"
                                       class="form-control radius-8"
                                       placeholder="Enter banner name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="mb-20">
                                <label for="Image"
                                       class="form-label fw-semibold text-primary-light text-sm mb-8">
                                    Banner Image
                                </label>

                                @if (!string.IsNullOrEmpty(Model.Image))
                                {
                                    <div class="mb-2">
                                        <img src="@Model.Image"
                                             alt="@Model.Name"
                                             style="max-width: 150px; border-radius: 8px;" />
                                    </div>
                                }

                                <input type="file" name="NewImage" class="form-control radius-8" />
                                <span class="text-muted text-sm">Choose a new image if you want to replace the current one.</span>
                            </div>

                            <div class="mb-20">
                                <label for="Description"
                                       class="form-label fw-semibold text-primary-light text-sm mb-8">
                                    Description
                                </label>
                                <textarea asp-for="Description"
                                          class="form-control radius-8"
                                          placeholder="Enter description..."></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="mb-20">
                                <label for="Postion"
                                       class="form-label fw-semibold text-primary-light text-sm mb-8">
                                    Display Position <span class="text-danger-600">*</span>
                                </label>
                                <select asp-for="Postion"
                                        class="form-control radius-8 form-select">
                                    <option value="">-- Select Position --</option>
                                    <option value="1">Top Banner</option>
                                    <option value="2">Middle Banner</option>
                                    <option value="3">Bottom Banner</option>
                                    <option value="4">Right Banner</option>
                                </select>
                                <span asp-validation-for="Postion" class="text-danger"></span>
                            </div>

                            <div class="mb-20">

                                <div class="col-md-12 mb-3">
                                    <label class="form-label fw-semibold">Status</label>
                                    <div class="form-check form-switch">
                                        <input type="checkbox"
                                               class="form-check-input"
                                               id="statusSwitch"
                                               name="Active"
                                               value="1"
                                        @(Model != null && Model.Active == 1 ? "checked" : "") />
                                        <label class="form-check-label" for="statusSwitch">
                                            @(Model != null && Model.Active == 1 ? "Active" : "Inactive")
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex align-items-center justify-content-center gap-3">
                                <a asp-action="Index"
                                   class="border border-danger-600 bg-hover-danger-200 text-danger-600 text-md px-56 py-11 radius-8 text-decoration-none">
                                    Cancel
                                </a>
                                <button type="submit"
                                        class="btn btn-primary border border-primary-600 text-md px-56 py-12 radius-8">
                                    Update
                                </button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function toggleStatusLabel(checkbox) {
        const label = document.getElementById('statusLabel');
        if (checkbox.checked) {
            label.textContent = 'Active';
        } else {
            label.textContent = 'Inactive';
        }
    }
</script>
