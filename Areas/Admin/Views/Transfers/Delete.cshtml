@model Project_sem_3.Models.Transfer

<h2 class="mt-3 mb-4 text-danger">Delete Confirmation</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this transfer?
</div>

<div class="card p-3">
    <dl class="row">
        <dt class="col-sm-3">Candidate</dt>
        <dd class="col-sm-9">@Model.Candidate?.Fullname</dd>

        <dt class="col-sm-3">From Stage</dt>
        <dd class="col-sm-9">@Model.FromStage</dd>

        <dt class="col-sm-3">To Stage</dt>
        <dd class="col-sm-9">@Model.ToStage</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
