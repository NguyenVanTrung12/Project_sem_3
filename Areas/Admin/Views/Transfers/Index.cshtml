@model IEnumerable<Project_sem_3.Models.Transfer>

@{
    ViewData["Title"] = "Danh sách ứng viên qua vòng test";
}

<h3 class="mb-3">Danh sách ứng viên đã qua vòng test</h3>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Ứng viên</th>
            <th>Từ vòng</th>
            <th>Sang vòng</th>
            <th>Ngày chuyển</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Candidate?.Fullname</td>
                <td>@item.FromStage</td>
                <td>@item.ToStage</td>
                <td>@item.TransferDate?.ToString("dd/MM/yyyy HH:mm")</td>
            </tr>
        }
    </tbody>
</table>
