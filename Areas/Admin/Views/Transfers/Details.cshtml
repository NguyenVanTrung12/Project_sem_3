@model Project_sem_3.Models.Transfer

<h2 class="mt-3 mb-4">Transfer Details</h2>

<div class="card p-3">
    <dl class="row">
        <dt class="col-sm-3">Candidate</dt>
        <dd class="col-sm-9">@Model.Candidate?.Fullname</dd>

        <dt class="col-sm-3">Transfer Date</dt>
        <dd class="col-sm-9">@Model.TransferDate?.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-3">From Stage</dt>
        <dd class="col-sm-9">@Model.FromStage</dd>

        <dt class="col-sm-3">To Stage</dt>
        <dd class="col-sm-9">@Model.ToStage</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back</a>
