@model Project_sem_3.Models.Result
@{
    ViewData["Title"] = "Create Result";
}

<h2 class="mt-3 mb-4">Create New Result</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="CandidateId" class="form-label"></label>
        <select asp-for="CandidateId" asp-items="ViewBag.CandidateId" class="form-select"></select>
    </div>

    <div class="mb-3">
        <label asp-for="SubjectId" class="form-label"></label>
        <select asp-for="SubjectId" asp-items="ViewBag.SubjectId" class="form-select"></select>
    </div>

    <div class="mb-3">
        <label asp-for="TypeId" class="form-label"></label>
        <select asp-for="TypeId" asp-items="ViewBag.TypeId" class="form-select"></select>
    </div>

    <div class="mb-3">
        <label asp-for="TotalMark" class="form-label"></label>
        <input asp-for="TotalMark" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="SubmitDate" class="form-label"></label>
        <input asp-for="SubmitDate" type="datetime-local" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Status" class="form-label"></label>
        <select asp-for="Status" class="form-select">
            <option value="1">Passed</option>
            <option value="0">Failed</option>
            <option value="2">Pending</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
