@model Project_sem_3.Models.Result;

@{
    Layout = "_Admin";
}

<div class="d-flex flex-wrap align-items-center justify-content-between gap-3 mb-24">
    <h6 class="fw-semibold mb-0">Edit Results</h6>
</div>

<div class="card h-100 p-0 radius-12">
    <div class="card-body p-24">
        <div class="row justify-content-center">
            <div class="col-xxl-6 col-xl-8 col-lg-10">
                <div class="card border">
                    <div class="card-body">

                        <form asp-controller="Results" asp-action="Edit" method="post">
                            <div class="mb-20">
                                <label for="CandidateId"
                                       class="form-label fw-semibold text-primary-light text-sm mb-8">
                                    Candidate
                                    <span class="text-danger-600">*</span>
                                </label>
                                <select asp-for="CandidateId" asp-items="ViewBag.CandidateList" class="form-control">
                                    <option value="">-- Select Candidate --</option>
                                </select>
                                <span asp-validation-for="CandidateId" class="text-danger"></span>
                            </div>

                            <div class="mb-20">
                                <label for="SubjectId"
                                       class="form-label fw-semibold text-primary-light text-sm mb-8">
                                    Subject
                                    <span class="text-danger-600">*</span>
                                </label>
                                <select asp-for="SubjectId" asp-items="ViewBag.SubjectList" class="form-control">
                                    <option value="">-- Select Subject --</option>
                                </select>
                                <span asp-validation-for="SubjectId" class="text-danger"></span>
                            </div>

                            <div class="mb-20">
                                <label for="TypeId"
                                       class="form-label fw-semibold text-primary-light text-sm mb-8">
                                    Test Type
                                    <span class="text-danger-600">*</span>
                                </label>
                                <select asp-for="TypeId" asp-items="ViewBag.TypeList" class="form-control">
                                    <option value="">-- Select Test Type --</option>
                                </select>
                                <span asp-validation-for="TypeId" class="text-danger"></span>
                            </div>
                            <div class="mb-20">
                                <label for="name"
                                       class="form-label fw-semibold text-primary-light text-sm mb-8">
                                    TotalMark
                                    <span class="text-danger-600">*</span>
                                </label>
                                <input type="text" asp-for="TotalMark" class="form-control radius-8" />
                                <span asp-validation-for="TotalMark" class="text-danger"></span>
                            </div>
                            <div class="mb-20">
                                <label for="name"
                                       class="form-label fw-semibold text-primary-light text-sm mb-8">
                                    SubmitDate
                                    <span class="text-danger-600">*</span>
                                </label>
                                <input type="date" asp-for="SubmitDate" class="form-control radius-8" />
                                <span asp-validation-for="SubmitDate" class="text-danger"></span>
                            </div>

                            <div class="mb-20">
                                <label class="form-label fw-semibold text-primary-light text-sm mb-8">
                                    Status <span class="text-danger-600">*</span>
                                </label>

                                <div class="form-check form-switch">
                                    <input type="checkbox"
                                           class="form-check-input"
                                           id="statusSwitch"
                                           name="Status"
                                           value="1"
                                           @(Model != null && Model.Status == 1 ? "checked" : "") />
                                    <label class="form-check-label" for="statusSwitch">
                                        @(Model != null && Model.Status == 1 ? "Active" : "Inactive")
                                    </label>
                                </div>
                            </div>
                            <div class="d-flex align-items-center justify-content-center gap-3">
                                <a asp-controller="Results" asp-action="Index"
                                   class="border border-danger-600 bg-hover-danger-200 text-danger-600 text-md px-56 py-11 radius-8">
                                    Cancel
                                </a>
                                <button type="submit"
                                        class="btn btn-primary border border-primary-600 text-md px-56 py-12 radius-8">
                                    Update
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

