@model Project_sem_3.Models.Result

<h2 class="mt-3 mb-4">Result Details</h2>

<div class="card p-3 shadow-sm">
    <dl class="row">
        <dt class="col-sm-3">Candidate</dt>
        <dd class="col-sm-9">@Model.Candidate?.Fullname</dd>

        <dt class="col-sm-3">Subject</dt>
        <dd class="col-sm-9">@Model.Subject?.SubjectName</dd>

        <dt class="col-sm-3">Type</dt>
        <dd class="col-sm-9">@Model.Type?.TypeName</dd>

        <dt class="col-sm-3">Total Mark</dt>
        <dd class="col-sm-9">@Model.TotalMark</dd>

        <dt class="col-sm-3">Submit Date</dt>
        <dd class="col-sm-9">@Model.SubmitDate?.ToString("dd/MM/yyyy HH:mm")</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">
            @if (Model.Status == 1)
            {
                <span class="badge bg-success">Passed</span>
            }
            else if (Model.Status == 0)
            {
                <span class="badge bg-danger">Failed</span>
            }
            else
            {
                <span class="badge bg-secondary">Pending</span>
            }
        </dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back</a>
