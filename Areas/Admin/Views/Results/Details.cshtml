@model Project_sem_3.Models.Result
@{
    Layout = "_Admin";
}

<style>
    /* ======= STYLE CHO BẢNG CHI TIẾT KẾT QUẢ ======= */
    table.table {
        table-layout: fixed;
        width: 100%;
        word-wrap: break-word;
        border-collapse: collapse;
    }

        table.table th,
        table.table td {
            vertical-align: top;
            white-space: normal;
            max-width: 400px;
            padding: 8px 12px;
        }

            table.table td p {
                margin-bottom: 0.5rem;
            }

            table.table td ul,
            table.table td ol {
                padding-left: 20px;
                margin-bottom: 0.5rem;
            }

            table.table td img {
                max-width: 100%;
                height: auto;
                border-radius: 6px;
            }

    /* Làm nổi bật hàng chẵn lẻ */
    table.table-striped tbody tr:nth-child(odd) {
        background-color: #f9f9f9;
    }

    table.table-striped tbody tr:hover {
        background-color: #f1f1f1;
    }

    .badge {
        font-size: 0.9rem;
        padding: 6px 10px;
        border-radius: 6px;
    }

    .card h5 {
        border-bottom: 2px solid #eee;
        padding-bottom: 8px;
        margin-bottom: 16px;
    }
</style>

<div class="d-flex flex-wrap align-items-center justify-content-between gap-3 mb-24">
    <h6 class="fw-semibold mb-0">Result Details</h6>
    <a asp-action="Index" class="btn btn-secondary">← Back to List</a>
</div>

<div class="card p-24 radius-12 mb-4">
    <h5 class="mb-3">General Information</h5>
    <table class="table table-bordered">
        <tr>
            <th>Candidate</th>
            <td>@Model.Candidate.Fullname</td>
        </tr>
        <tr>
            <th>Subject</th>
            <td>@Model.Subject.SubjectName</td>
        </tr>
        <tr>
            <th>Type</th>
            <td>@Model.Type.TypeName</td>
        </tr>
        <tr>
            <th>Total Mark</th>
            <td>@Model.TotalMark</td>
        </tr>
        <tr>
            <th>Submit Date</th>
            <td>@Model.SubmitDate?.ToString("dd/MM/yyyy HH:mm")</td>
        </tr>
        <tr>
            <th>Status</th>
            <td>
                @if (Model.Status == 1)
                {
                    <span class="badge bg-success">Active</span>
                }
                else
                {
                    <span class="badge bg-secondary">Inactive</span>
                }
            </td>
        </tr>
    </table>
</div>

<div class="card p-24 radius-12">
    <h5 class="mb-3">Detailed Results</h5>

    @if (Model.ResultDetails != null && Model.ResultDetails.Any())
    {
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Question</th>
                    <th>Answer</th>
                    <th>Mark</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var detail in Model.ResultDetails)
                {
                    <tr>
                        <td>@detail.Id</td>
                        <td>@Html.Raw(detail.Question.QuestionContent)</td>
                        <td>@Html.Raw(detail.Answer.AnswerContent)</td>
                        <td>@detail.Mark</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No result details available.</p>
    }
</div>
