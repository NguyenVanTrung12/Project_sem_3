@model Project_sem_3.Models.InterviewSchedule;

@{
    Layout = "_Admin";
}

<div class="d-flex flex-wrap align-items-center justify-content-between gap-3 mb-24">
    <h6 class="fw-semibold mb-0">Add InterviewSchedules</h6>
</div>

<div class="card h-100 p-0 radius-12">
    <div class="card-body p-24">
        <div class="row justify-content-center">
            <div class="col-xxl-6 col-xl-8 col-lg-10">
                <div class="card border">
                    <div class="card-body">

                        <form asp-controller="InterviewSchedules" asp-action="Create" method="post">
                            <div class="mb-20">
                                <label for="name"
                                       class="form-label fw-semibold text-primary-light text-sm mb-8">
                                    Candidates
                                    <span class="text-danger-600">*</span>
                                </label>
                                <select asp-for="CandidateId" asp-items="ViewBag.CandidateList" class="form-control">
                                    <option value="">--Select candidate--</option>
                                </select>
                                <span asp-validation-for="CandidateId" class="text-danger"></span>
                            </div>

                            <div class="mb-20">
                                <label for="name"
                                       class="form-label fw-semibold text-primary-light text-sm mb-8">
                                    InterviewDate
                                    <span class="text-danger-600">*</span>
                                </label>
                                <input type="date" asp-for="InterviewDate" class="form-control radius-8" />
                                <span asp-validation-for="InterviewDate" class="text-danger"></span>
                            </div>
                            <div class="mb-20">
                                <label for="name"
                                       class="form-label fw-semibold text-primary-light text-sm mb-8">
                                    Interviewer
                                    <span class="text-danger-600">*</span>
                                </label>
                                <input type="text" asp-for="Interviewer" class="form-control radius-8" />
                                <span asp-validation-for="Interviewer" class="text-danger"></span>
                            </div>
                            <div class="mb-20">
                                <label for="name"
                                       class="form-label fw-semibold text-primary-light text-sm mb-8">
                                    Location
                                    <span class="text-danger-600">*</span>
                                </label>
                                <input type="text" asp-for="Location" class="form-control radius-8" />
                                <span asp-validation-for="Location" class="text-danger"></span>
                            </div>

                            <div class="mb-20">
                                <label for="name"
                                       class="form-label fw-semibold text-primary-light text-sm mb-8">
                                    Result
                                    <span class="text-danger-600">*</span>
                                </label>
                                <input type="text" asp-for="Result" class="form-control radius-8" />
                                <span asp-validation-for="Result" class="text-danger"></span>
                            </div>
                            <div class="mb-20">
                                <label for="name"
                                       class="form-label fw-semibold text-primary-light text-sm mb-8">
                                    Note
                                    <span class="text-danger-600">*</span>
                                </label>
                                <input type="text" asp-for="Note" class="form-control radius-8" />
                                <span asp-validation-for="Note" class="text-danger"></span>
                            </div>

                            <div class="d-flex align-items-center justify-content-center gap-3">
                                <a asp-controller="InterviewSchedules" asp-action="Index"
                                   class="border border-danger-600 bg-hover-danger-200 text-danger-600 text-md px-56 py-11 radius-8">
                                    Cancel
                                </a>
                                <button type="submit"
                                        class="btn btn-primary border border-primary-600 text-md px-56 py-12 radius-8">
                                    Save
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

