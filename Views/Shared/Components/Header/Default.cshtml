@inject IHttpContextAccessor HttpContextAccessor

@{
    var fullname = HttpContextAccessor.HttpContext.Session.GetString("CandidateName");
}

<header class="header-area">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7 col-md-9">
                <div class="header-left-text">
                    <ul>
                        <li>
                            <a href="tel:+0123456789">
                                <i class="flaticon-call"></i>
                                +0123456789
                            </a>
                        </li>
                        <li>
                            <a href="https://templates.hibootstrap.com/cdn-cgi/l/email-protection#ddb4b3bbb29db8abb8afbff3beb2b0">
                                <i class="flaticon-envelope"></i>
                                <span class="__cf_email__" data-cfemail="e58c8b838aa58093809787cb868a88">[email&#160;protected]</span>
                            </a>
                        </li>
                        <li>
                            <i class="flaticon-pin"></i>
                            28/A Street, USA
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-5 col-md-3">
                <div class="header-right text-end">
                    <div class="header-social">
                        <ul>
                            <li>
                                <a href="#"><i class="flaticon-facebook"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="flaticon-twitter"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="flaticon-linkedin"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="flaticon-instagram"></i></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="navbar-area">
    <!-- Menu For Mobile Device -->
    <div class="mobile-nav">
        <a href="index.html" class="logo">
            <img src="assets/img/logo-two.png" alt="logo">
        </a>
    </div>

    <!-- Menu For Desktop Device -->
    <div class="main-nav">
        <div class="container">
            <nav class="navbar navbar-expand-md navbar-light">
                <a class="navbar-brand" href="index.html">
                    <img src="assets/img/logo.png" class="main-logo" alt="logo">
                    <img src="assets/img/logo-two.png" class="white-logo" alt="logo">
                </a>
                <div class="collapse navbar-collapse mean-menu" id="navbarSupportedContent">
                    <ul class="navbar-nav m-auto">
                        <li class="nav-item">
                            <a href="/" class="nav-link dropdown-toggle active">Home</a>
                        </li>

                        <li class="nav-item">
                            <a href="about.html" class="nav-link">About</a>
                        </li>


                        <li class="nav-item">
                            <a href="blog.html" class="nav-link dropdown-toggle">Blog</a>

                        </li>
                        <li class="nav-item">
                            <a href="contact.html" class="nav-link">Contact Us</a>
                        </li>
                    </ul>

                    <div class="other-option">
                       

                     
                            @if (string.IsNullOrEmpty(fullname))
                            {
                            <div class="search-bar">
                                <i class="flaticon-search search-icon"></i>
                                <div class="search-form">
                                    <form>
                                        <input type="text" placeholder="Search" class="search-input">
                                        <button type="submit">
                                            <i class="flaticon-search search-btn"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                            <div class="sidebar-toggle">
                                <a asp-controller="Logon" asp-action="Index">
                                    <button type="button" class="btn btn-demo navbar-toggle">
                                        <i class="fa-solid fa-user"></i>
                                    </button>
                                </a>
                                </div>
                            }
                            else
                            {
                            <span class="navbar-text me-2 text-danger">
                                Hello, @fullname
                            </span>
                            <div class="search-bar">
                                <i class="flaticon-search search-icon"></i>
                                <div class="search-form">
                                    <form>
                                        <input type="text" placeholder="Search" class="search-input">
                                        <button type="submit">
                                            <i class="flaticon-search search-btn"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                            <div class="sidebar-toggle">
                             
                                <a asp-controller="Logon" asp-action="Logout">
                                    <button type="button" class="btn btn-demo navbar-toggle">
                                        <i class="fa-solid fa-right-from-bracket"></i>
                                    </button>
                                </a>
                             </div>
                            }
                     
                    </div>
                </div>
            </nav>
        </div>
    </div>
</div>