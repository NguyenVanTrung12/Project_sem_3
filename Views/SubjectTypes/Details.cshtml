@model Project_sem_3.Models.SubjectType

@{
    ViewData["Title"] = "Chi tiết loại câu hỏi";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h2 class="card-title mb-0">Chi tiết loại câu hỏi</h2>
                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th class="bg-light" width="30%">Môn học</th>
                                <td>
                                    @if (Model?.Subject != null)
                                    {
                                        <div>
                                            <strong>Mã môn học:</strong> @Html.DisplayFor(model => model.Subject.SubjectCode)
                                        </div>
                                        <div>
                                            <strong>Tên môn học:</strong> @Html.DisplayFor(model => model.Subject.SubjectName)
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Không có</span>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <th class="bg-light">Loại câu hỏi</th>
                                <td>
                                    @if (Model?.Type != null)
                                    {
                                        @Html.DisplayFor(model => model.Type.Id)
                                    }
                                    else
                                    {
                                        <span class="text-muted">Không có</span>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <th class="bg-light">Số lượng câu hỏi</th>
                                <td>
                                    @if (Model?.NumQuestion != null)
                                    {
                                        <span class="badge bg-primary">@Model.NumQuestion câu</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Chưa thiết lập</span>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <th class="bg-light">Thời gian làm bài</th>
                                <td>
                                    @if (Model?.LimitTime != null)
                                    {
                                        <span class="badge bg-info">@Model.LimitTime phút</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Chưa thiết lập</span>
                                    }
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="text-center mt-4">
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                            <i class="fas fa-edit"></i> Chỉnh sửa
                        </a>
                        <a asp-action="Index" class="btn btn-secondary ml-2">
                            <i class="fas fa-arrow-left"></i> Quay lại danh sách
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
