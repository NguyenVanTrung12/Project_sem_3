@model Project_sem_3.Models.Result

@{
    ViewData["Title"] = "Exam Result";
    Layout = "_Layout";
}

<div id="candidate-result" class="page py-5" style="background: #f5f6fa; min-height: 100vh;">
    <div class="container">
        <div class="card shadow-lg border-0 rounded-4 mx-auto" style="max-width: 850px;">
            <div class="card-body p-5 text-center">
                <div class="mb-4">
                    <div class="display-3 mb-2">🎉</div>
                    <h2 class="fw-bold text-primary mb-1">Congratulations! You have completed the test!</h2>
                    <p class="text-muted mb-4">
                        Subject: <strong>@Model.Subject?.SubjectName</strong>
                    </p>
                </div>

                <!-- ✅ SCORE -->
                <div class="score-display mb-4">
                    <div class="fw-bold" style="font-size: 60px; color: #198754;">
                        @Model.TotalMark<span style="font-size: 32px;">/@Model.ResultDetails.Count</span>
                    </div>
                </div>

                <!-- ✅ CORRECT COUNT, PERCENTAGE, RANK -->
                @{
                    int totalQuestions = Model.ResultDetails.Count;
                    int correctCount = Model.ResultDetails.Count(r => r.Answer.Correctly == true);
                    double percent = (totalQuestions > 0) ? (double)correctCount / totalQuestions * 100 : 0;

                    string rank = percent switch
                    {
                        >= 90 => "Excellent",
                        >= 75 => "Good",
                        >= 50 => "Fair",
                        >= 30 => "Average",
                        _ => "Poor"
                    };
                }

                <div class="d-flex justify-content-center flex-wrap gap-4 mb-4">
                    <div class="result-item">
                        <h5 class="text-muted mb-1">Correct Answers</h5>
                        <p class="fw-bold fs-5 text-dark">@correctCount/@totalQuestions</p>
                    </div>
                    <div class="result-item">
                        <h5 class="text-muted mb-1">Accuracy</h5>
                        <p class="fw-bold fs-5 text-dark">@percent.ToString("0.0")%</p>
                    </div>
                    <div class="result-item">
                        <h5 class="text-muted mb-1">Rank</h5>
                        <p class="fw-bold fs-5 text-dark">@rank</p>
                    </div>
                </div>

                <div class="analysis-box text-start mt-4">
                    <h4 class="fw-semibold mb-3 text-primary">📊 Detailed Analysis</h4>
                    <div class="table-responsive">
                        <table class="table table-bordered align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Question</th>
                                    <th>Your Answer</th>
                                    <th>Result</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var detail in Model.ResultDetails)
                                {
                                    <tr>
                                        <td>@Html.Raw(detail.Question.QuestionContent)</td>
                                        <td>@Html.Raw(detail.Answer.AnswerContent)</td>
                                        <td>
                                            @if (detail.Answer.Correctly == true)
                                            {
                                                <span class="text-success fw-bold">✅ Correct</span>
                                            }
                                            else
                                            {
                                                <span class="text-danger fw-bold">❌ Incorrect</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                @if (ViewBag.IsPassed == true)
                {
                    if (Model.SubjectId == 3)
                    {
                        <!-- ✅ Passed Round 3 -->
                        <div class="alert alert-success mt-4">
                            🎉 Congratulations! You have completed <strong>ALL aptitude test rounds!</strong><br />
                            You will be moved to the <strong>HR Round</strong>. Our HR department will contact you soon.
                        </div>

                        <div class="d-flex justify-content-center gap-3 mt-4">
                            <a href="@Url.Action("Index", "Home")" class="btn btn-success px-4">🏠 Back to Home</a>
                            <a href="@Url.Action("Details", "Transfer", new { candidateId = Model.CandidateId })"
                               class="btn btn-outline-primary px-4">
                                📋 View HR Round Notice
                            </a>

                        </div>
                    }
                    else
                    {
                        <!-- ✅ Passed Round 1 or 2 -->
                        <div class="alert alert-success mt-4">
                            🎉 Congratulations! You have passed <strong>@Model.Subject?.SubjectName</strong>!
                        </div>

                        <form asp-action="Start" asp-controller="Exam" method="get" class="mt-3">
                            <input type="hidden" name="subjectId" value="@(Model.SubjectId + 1)" />
                            <input type="hidden" name="typeId" value="@(Model.TypeId + 1)" />
                            <button type="submit" class="btn btn-primary">👉 Start Next Round</button>
                        </form>
                    }
                }
                else
                {
                    <div class="alert alert-danger mt-4">
                        😔 You did not meet the passing requirement. Please review and try again later.
                    </div>
                }

                <div class="d-flex justify-content-center gap-3 mt-4">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary px-4">🔙 Retry / View Other Subjects</a>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-success px-4">Next Test</a>
                </div>

                <p class="text-muted mt-4" style="font-size: 14px;">
                    Your result has been saved to your profile • Exam Date: @Model.SubmitDate?.ToString("dd/MM/yyyy HH:mm")
                </p>
            </div>
        </div>
    </div>
</div>

<style>
    .card-body {
        background: #fff;
    }

    .score-display {
        border: 3px dashed #198754;
        border-radius: 15px;
        display: inline-block;
        padding: 20px 40px;
        background: #eafaf1;
    }

    .table th, .table td {
        text-align: center;
        vertical-align: middle;
    }

    .btn {
        border-radius: 8px;
    }
</style>
