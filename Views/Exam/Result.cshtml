@model Project_sem_3.Models.Result

@{
    ViewData["Title"] = "Kết quả bài thi";
    Layout = "_Layout";
}

<div id="candidate-result" class="page py-5" style="background: #f5f6fa; min-height: 100vh;">
    <div class="container">
        <div class="card shadow-lg border-0 rounded-4 mx-auto" style="max-width: 850px;">
            <div class="card-body p-5 text-center">
                <div class="mb-4">
                    <div class="display-3 mb-2">🎉</div>
                    <h2 class="fw-bold text-primary mb-1">Chúc mừng bạn đã hoàn thành bài thi!</h2>
                    <p class="text-muted mb-4">
                        Môn thi: <strong>@Model.Subject?.SubjectName</strong>
                    </p>
                </div>

                <!-- ✅ ĐIỂM THẬT -->
                <div class="score-display mb-4">
                    <div class="fw-bold" style="font-size: 60px; color: #198754;">
                        @Model.TotalMark<span style="font-size: 32px;">/@Model.ResultDetails.Count</span>
                    </div>
                </div>

                <!-- ✅ SỐ CÂU ĐÚNG, TỶ LỆ, XẾP LOẠI -->
                @{
                    int totalQuestions = Model.ResultDetails.Count;
                    int correctCount = Model.ResultDetails.Count(r => r.Answer.Correctly == true);
                    double percent = (totalQuestions > 0) ? (double)correctCount / totalQuestions * 100 : 0;

                    string rank = percent switch
                    {
                        >= 90 => "Xuất sắc",
                        >= 75 => "Giỏi",
                        >= 50 => "Khá",
                        >= 30 => "Trung bình",
                        _ => "Yếu"
                    };
                }

                <div class="d-flex justify-content-center flex-wrap gap-4 mb-4">
                    <div class="result-item">
                        <h5 class="text-muted mb-1">Số câu đúng</h5>
                        <p class="fw-bold fs-5 text-dark">@correctCount/@totalQuestions</p>
                    </div>
                    <div class="result-item">
                        <h5 class="text-muted mb-1">Tỷ lệ đúng</h5>
                        <p class="fw-bold fs-5 text-dark">@percent.ToString("0.0")%</p>
                    </div>
                    <div class="result-item">
                        <h5 class="text-muted mb-1">Xếp loại</h5>
                        <p class="fw-bold fs-5 text-dark">@rank</p>
                    </div>
                </div>

                <div class="analysis-box text-start mt-4">
                    <h4 class="fw-semibold mb-3 text-primary">📊 Phân tích chi tiết</h4>
                    <div class="table-responsive">
                        <table class="table table-bordered align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Câu hỏi</th>
                                    <th>Đáp án bạn chọn</th>
                                    <th>Kết quả</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var detail in Model.ResultDetails)
                                {
                                    <tr>
                                        <td>@Html.Raw(detail.Question.QuestionContent)</td>
                                        <td>@Html.Raw(detail.Answer.AnswerContent)</td>
                                        <td>
                                            @if (detail.Answer.Correctly == true)
                                            {
                                                <span class="text-success fw-bold">✅ Đúng</span>
                                            }
                                            else
                                            {
                                                <span class="text-danger fw-bold">❌ Sai</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                @if (ViewBag.IsPassed == true)
                {
                    <div class="alert alert-success mt-4">
                        🎉 Chúc mừng bạn đã vượt qua vòng @Model.TypeId!
                    </div>

                    <form asp-action="Start" method="get" class="mt-3">
                        <input type="hidden" name="subjectId" value="@Model.SubjectId" />
                        <input type="hidden" name="typeId" value="@(Model.TypeId + 1)" />
                        <button type="submit" class="btn btn-primary">Thi vòng @(Model.TypeId + 1)</button>
                    </form>
                }
                else
                {
                    <div class="alert alert-danger mt-4">
                        😔 Bạn chưa đạt yêu cầu, hãy ôn tập và thử lại sau.
                    </div>
                }

                <div class="d-flex justify-content-center gap-3 mt-4">
                    <a href="@Url.Action("Index", "Exam")" class="btn btn-outline-primary px-4">🔙 Làm lại / Xem môn khác</a>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-success px-4">Về trang chủ</a>
                </div>

                <p class="text-muted mt-4" style="font-size: 14px;">
                    Kết quả đã được lưu vào hồ sơ của bạn • Ngày thi: @Model.SubmitDate?.ToString("dd/MM/yyyy HH:mm")
                </p>
            </div>
        </div>
    </div>
</div>

<style>
    .card-body {
        background: #fff;
    }

    .score-display {
        border: 3px dashed #198754;
        border-radius: 15px;
        display: inline-block;
        padding: 20px 40px;
        background: #eafaf1;
    }

    .table th, .table td {
        text-align: center;
        vertical-align: middle;
    }

    .btn {
        border-radius: 8px;
    }
</style>
