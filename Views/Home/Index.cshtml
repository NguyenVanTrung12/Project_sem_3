@model Project_sem_3.Models.Contact

@{
    Layout = "_Layout";
    var contact = ViewBag.Contact as Project_sem_3.Models.Contact;
}


<!-- Banner Section Start -->
<div class="main-banner" style="height:450px">
    <div class="d-table">
        <div class="d-table-cell">
            <div class="container">
                @foreach (var item in ViewBag.Banner)
                {
                    <div class="row align-items-center banner-slide" style="display: none;">
                        <!-- Content Column -->
                        <div class="col-lg-7 col-md-12">
                            <div class="banner-text">
                                <h1>@item.Name</h1>
                                <p>@item.Description</p>
                            </div>
                        </div>

                        <!-- Image Column -->
                        <div class="col-lg-5 col-md-12">
                            <div class="banner-image text-center">
                                <img src="@item.Image" alt="@item.Name" class="img-fluid rounded shadow">
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div id="particles-js"></div>
</div>



<section class="features-section pb-70">
    <div class="container">
        <div class="section-title text-center">
            <span>Our Features</span>
            <h2>Choose Your Test Topic</h2>
            <p>Select which part of the aptitude test you want to begin with. Follow the sequence to complete all rounds.</p>
        </div>

        <div class="row">

            <!-- General Knowledge -->
            <div class="col-lg-4 col-sm-6">

                <div class="features-card feature-one">
                    <i class="flaticon-technical-support"></i>
                    <h3>General Knowledge</h3>
                    <p>Test your awareness of the world, history, science, and current affairs.</p>
                    <div class="theme-button mt-4">
                        <a asp-controller="Exam" asp-action="Start" asp-route-topic="GeneralKnowledge" class="default-btn">Take the Test</a>
                    </div>
                </div>

            </div>

            <!-- Mathematics -->
            <div class="col-lg-4 col-sm-6">

                <div class="features-card feature-two">
                    <i class="flaticon-megaphone"></i>
                    <h3>Mathematics</h3>
                    <p>Challenge your problem-solving and quantitative reasoning abilities.</p>
                    <div class="theme-button mt-4">
                        <a asp-controller="Exam" asp-action="Start" asp-route-topic="Mathematics" class="default-btn">Take the Test</a>
                    </div>
                </div>

            </div>

            <!-- Computer Technology -->
            <div class="col-lg-4 col-sm-6">

                <div class="features-card feature-three">
                    <i class="flaticon-settings"></i>
                    <h3>Computer Technology</h3>
                    <p>Assess your understanding of computers, programming, and IT fundamentals.</p>
                    <div class="theme-button mt-4">
                        <a asp-controller="Exam" asp-action="Start" asp-route-topic="ComputerTechnology" class="default-btn">Take the Test</a>
                    </div>
                </div>



            </div>

        </div>
    </div>
</section>



<!-- Service Section Start -->
<div class="service-section">
    <div class="container-fluid">
        <div class="row">
            <!-- Service background image (keep original style) -->
            <div class="col-md-7 service-img">
            </div>

            <!-- Content -->
            <div class="col-md-7 offset-md-5 p-0">
                <div class="service-text">
                    <h2>Oil & Gas Recruitment and Competency Assessment Solutions</h2>
                    <ul>
                        <li>
                            <i class="flaticon-checked"></i>
                            Online Testing System
                        </li>
                        <li>
                            <i class="flaticon-checked"></i>
                            Automated Scoring & Result Reporting
                        </li>
                        <li>
                            <i class="flaticon-checked"></i>
                            Easy & Secure Candidate Management
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Service Section End -->
<!-- Team Section Start -->
<section class="team-section pt-100 pb-70">
    <div class="container">
        <div class="section-title text-center">
            <span>Team Member</span>
            <h2>Meet Our Expert Team Member</h2>
        </div>

        <div class="row">
            @foreach (var item in ViewBag.Manage)
            {
                <div class="col-lg-3 col-sm-6">
                    <div class="team-card">
                        <div class="team-img">
                            <img src="@item.Image" width="100%" height="350" style="object-fit:cover" alt="team member">

                            <div class="team-text">
                                <div class="team-social">
                                    <ul>
                                        <li>
                                            <a href="https://www.facebook.com/"><i class="flaticon-facebook"></i></a>
                                        </li>
                                        <li>
                                            <a href="https://twitter.com/"><i class="flaticon-twitter"></i></a>
                                        </li>
                                        <li>
                                            <a href="https://www.instagram.com/"><i class="flaticon-instagram"></i></a>
                                        </li>
                                        <li>
                                            <a href="https://www.linkedin.com/"><i class="flaticon-linkedin"></i></a>
                                        </li>
                                    </ul>
                                </div>
                                <h3>@item.Fullname</h3>
                                @* <p>Business Consultant</p> *@
