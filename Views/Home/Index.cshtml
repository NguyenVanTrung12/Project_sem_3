@model IEnumerable<Project_sem_3.Models.Subject>
@{
    Layout = "_Layout";
    var error = TempData["Error"] as string;
}

<div class="main-banner" style="height:450px">
    <div class="d-table">
        <div class="d-table-cell">
            <div class="container">
              
                    @foreach (var item in ViewBag.Banner)
                    {
                        <div class="row align-items-center banner-slide" style="display: none;">
                            <!-- Content Column -->
                            <div class="col-lg-7 col-md-12">
                                <div class="banner-text">
                                    <h1>@item.Name</h1>
                                    <p>@item.Description</p>
                                </div>
                            </div>

                            <!-- Image Column -->
                            <div class="col-lg-5 col-md-12">
                                <div class="banner-image text-center">
                                    <img src="@item.Image" alt="@item.Name" class="img-fluid rounded shadow" style="height:400px">
                                </div>
                            </div>
                        </div>
                    }
               
            </div>
        </div>
    </div>
    <div id="particles-js"></div>
</div>


<section class="features-section pb-70">
    <div class="container">
        <div class="section-title text-center">
            <span>Our Features</span>
            <h2>Choose Your Test Topic</h2>
            <p>Select which part of the aptitude test you want to begin with. Follow the sequence to complete all rounds.</p>
        </div>

        <div class="row">
            @foreach (var subject in Model)
            {
                var canAccess = ViewData[$"CanAccess_{subject.Id}"] as bool? ?? false;
                var isDone = ViewData[$"IsDone_{subject.Id}"] as bool? ?? false;
                var isFailed = ViewData[$"IsFailed_{subject.Id}"] as bool? ?? false;
                var isLoggedIn = ViewData["IsLoggedIn"] as bool? ?? false;
                var lockedDueToFail = ViewData[$"LockedDueToFail_{subject.Id}"] as bool? ?? false;

                <div class="col-lg-4 col-sm-6 mb-4">
                    <div class="features-card feature-one p-3 border rounded text-center">
                        <i class="flaticon-technical-support display-4"></i>
                        <h3 class="mt-3">@subject.SubjectName</h3>

                        @if (isFailed)
                        {
                            <p class="text-danger fw-bold">
                                You have taken this round and did not pass. Retake is not allowed.
                            </p>
                        }

                        <div class="theme-button mt-3">
                            @if (isLoggedIn)
                            {
                                if (isDone)
                                {
                                    <span class="badge bg-success">✅ Completed</span>
                                }
                                else if (isFailed)
                                {
                                    <button type="button" class="default-btn" disabled>
                                        ❌ You did not pass this round
                                    </button>
                                }
                                else if (canAccess)
                                {
                                    <a asp-controller="Exam" asp-action="Start" asp-route-subjectId="@subject.Id"
                                       class="default-btn">
                                        🎯 Take the Test
                                    </a>
                                }
                                else
                                {
                                    if (lockedDueToFail)
                                    {
                                        <button type="button" class="default-btn" onclick="showFailMessage()">Locked</button>
                                    }
                                    else
                                    {
                                        <button type="button" class="default-btn" onclick="showLockedMessage()">Locked</button>
                                    }
                                }
                            }
                            else
                            {
                                <a asp-controller="Logon" asp-action="Index" class="default-btn">
                                    🔐 Login to Take the Test
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<script>
    // ⚠️ Alert when the test is locked because the previous round hasn’t been passed yet
    function showLockedMessage() {
        alert("🔒 You need to pass the previous round to unlock this test!");
    }

    // ⚠️ Alert when the next round is locked due to failure in the previous one
    function showFailMessage() {
        alert("❌ You failed the previous round. You cannot continue to the next ones.");
    }
</script>









