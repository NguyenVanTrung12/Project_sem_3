@model IEnumerable<Project_sem_3.Models.Manager>
@{
    int index = 0;
}

<!-- About Title Section -->
<div class="about-title">
    <div class="d-table">
        <div class="d-table-cell">
            <div class="title-text text-center">
                <h2>About Our Platform</h2>
                <ul>
                    <li><a href="/">Home</a></li>
                    <li>About</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Mission Section -->
<section class="theory-section theory-style-two pt-80 pb-80">
    <div class="container">


        @foreach (var item in Model)
        {
            bool isEven = index % 2 == 0; // Bài đầu tiên (index = 0) là chẵn → chữ trái, ảnh phải

            if (isEven)
            {
                <!-- Bài chẵn: chữ bên trái, ảnh bên phải -->
                <div class="row theory-area" style="margin:10px 0px;">
                    <div class="col-lg-7">
                        <div class="theory-text">
                            <h2>@item.Fullname</h2>

                            <div class="signature-box">
                                <img src="/assets/img/signature.png" alt="signature">
                                <p>@item.Email</p>
                                <span>@item.Phone</span>
                            </div>
                        </div>
                    </div>

                    <div class="theory-img col-lg-5 text-center">
                        <img src="@item.Image" alt="theory image" class="img-fluid rounded shadow">
                    </div>
                </div>
            }
            else
            {
                <!-- Bài lẻ: ảnh bên trái, chữ bên phải -->
                <div class="row theory-area" style="margin:10px 0px;">
                    <div class="theory-img col-lg-5 text-center">
                        <img src="@item.Image" alt="theory image" class="img-fluid rounded shadow">
                    </div>
                    <div class="col-lg-7">
                        <div class="theory-text">
                            <h2>@item.Fullname</h2>

                            <div class="signature-box">
                                <img src="/assets/img/signature.png" alt="signature">
                                <p>@item.Email</p>
                                <span>@item.Phone</span>
                            </div>
                        </div>
                    </div>

                 
                </div>
            }

            index++;
        }
    </div>

</section>

<!-- Core Values Section -->
<section class="about-section pb-100 pt-80">
    <div class="container">
        <div class="section-title text-center">
            <span>Our Core Values</span>
            <h2>What Drives Us Forward</h2>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-3 col-sm-6 text-center">
                <div class="about-us">
                    <i class="flaticon-podium icon-one"></i>
                    <h4>Innovation</h4>
                    <p>We continuously improve our system with the latest technologies.</p>
                </div>
            </div>

            <div class="col-md-3 col-sm-6 text-center">
                <div class="about-us">
                    <i class="flaticon-customer-service icon-two"></i>
                    <h4>Support</h4>
                    <p>Our team is always ready to assist users and ensure smooth experiences.</p>
                </div>
            </div>

            <div class="col-md-3 col-sm-6 text-center">
                <div class="about-us">
                    <i class="flaticon-handshake icon-three"></i>
                    <h4>Trust</h4>
                    <p>We value transparency and fairness in every test and result.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Video Section -->
<div class="video-style-two video-style-three">
    <div class="container-fluid">
        <div class="d-table">
            <div class="d-table-cell">
                <div class="video-text text-center">
                    <a href="https://www.youtube.com/watch?v=Fbps7_mkIT0" class="popup-vimeo">
                        <i class="flaticon-play"></i>
                    </a>
                    <p>Watch Our Story</p>
                </div>
            </div>
        </div>
    </div>
</div>
