@model IEnumerable<Project_sem_3.Models.Manager>

<!-- About Title Section -->
<div class="about-title">
    <div class="d-table">
        <div class="d-table-cell">
            <div class="title-text text-center">
                <h2>About Our Platform</h2>
                <ul>
                    <li><a href="/">Home</a></li>
                    <li>About</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- About Section -->
<section class="about-section pb-100">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-5">
                <div class="about-image">
                    <img src="/assets/img/about/1.jpg" alt="about image">
                </div>
            </div>

            <div class="col-lg-6 offset-lg-1">
                <div class="about-text">
                    <div class="section-title">
                        <span>About Us</span>
                        <h2>We Build Smart Tools for Smarter Testing</h2>
                    </div>

                    <p>
                        Our Online Aptitude Test Platform is designed to help learners sharpen their logical reasoning,
                        problem-solving, and language processing skills through a modern, interactive testing experience.
                        The system features automated scoring, performance analytics, and personalized improvement suggestions
                        to help users continuously enhance their abilities.
                    </p>

                    <div class="theme-button">
                        <a href="/Test/Index" class="default-btn">Start Practicing</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Mission Section -->
<section class="theory-section theory-style-two pt-80 pb-80">
    <div class="container">
        <div class="row theory-area">
            <div class="col-lg-7">
                <div class="theory-text">
                    <h2>Our Mission</h2>
                    <p>
                        Our mission is to make aptitude testing accessible, engaging, and meaningful for everyone.
                        We believe that through smart technology, individuals can discover their strengths,
                        identify areas for improvement, and reach their full potential.
                    </p>

                    <div class="signature-box">
                        <img src="/assets/img/signature.png" alt="signature">
                        <p>Online Aptitude Team</p>
                        <span>Development & Innovation</span>
                    </div>
                </div>
            </div>
            <div class="theory-img">
                <img src="/assets/img/theory-img.png" alt="theory image">
            </div>
        </div>
    </div>
</section>

<!-- Core Values Section -->
<section class="about-section pb-100 pt-80">
    <div class="container">
        <div class="section-title text-center">
            <span>Our Core Values</span>
            <h2>What Drives Us Forward</h2>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-3 col-sm-6 text-center">
                <div class="about-us">
                    <i class="flaticon-podium icon-one"></i>
                    <h4>Innovation</h4>
                    <p>We continuously improve our system with the latest technologies.</p>
                </div>
            </div>

            <div class="col-md-3 col-sm-6 text-center">
                <div class="about-us">
                    <i class="flaticon-customer-service icon-two"></i>
                    <h4>Support</h4>
                    <p>Our team is always ready to assist users and ensure smooth experiences.</p>
                </div>
            </div>

            <div class="col-md-3 col-sm-6 text-center">
                <div class="about-us">
                    <i class="flaticon-handshake icon-three"></i>
                    <h4>Trust</h4>
                    <p>We value transparency and fairness in every test and result.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Team Section -->
<section class="team-section pt-100 pb-70">
    <div class="container">
        <div class="section-title text-center">
            <span>Development Team</span>
            <h2>Meet the People Behind Our Platform</h2>
        </div>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-sm-6">
                    <div class="team-card">
                        <div class="team-img">
                            <img src="@item.Image" width="100%" height="300" style="object-fit:cover" alt="@item.Fullname">

                            <div class="team-text">
                                <div class="team-social">
                                    <ul>
                                        <li>
                                            <a href="https://www.facebook.com/" target="_blank">
                                                <i class="flaticon-facebook"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="https://twitter.com/" target="_blank">
                                                <i class="flaticon-twitter"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="https://www.instagram.com/" target="_blank">
                                                <i class="flaticon-instagram"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="https://www.linkedin.com/" target="_blank">
                                                <i class="flaticon-linkedin"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                                <h3>@item.Fullname</h3>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Video Section -->
<div class="video-style-two video-style-three">
    <div class="container-fluid">
        <div class="d-table">
            <div class="d-table-cell">
                <div class="video-text text-center">
                    <a href="https://www.youtube.com/watch?v=Fbps7_mkIT0" class="popup-vimeo">
                        <i class="flaticon-play"></i>
                    </a>
                    <p>Watch Our Story</p>
                </div>
            </div>
        </div>
    </div>
</div>
