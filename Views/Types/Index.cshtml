@model IEnumerable<Project_sem_3.Models.Type>

@{
    ViewData["Title"] = "Danh sách loại câu hỏi";
}

<div class="container-fluid mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h2 class="card-title mb-0">Danh sách loại câu hỏi</h2>
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus"></i> Thêm mới
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Tên loại câu hỏi</th>
                            <th class="text-center" width="150px">Trạng thái</th>
                            <th class="text-center" width="150px">Thứ tự</th>
                            <th class="text-center" width="200px">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td>
                                <strong>@Html.DisplayFor(modelItem => item.TypeName)</strong>
                            </td>
                            <td class="text-center">
                                @if (item.Status == 1)
                                {
                                    <span class="badge bg-success">Hoạt động</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Không hoạt động</span>
                                }
                            </td>
                            <td class="text-center">
                                <span class="badge bg-primary">@item.Ord</span>
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm" title="Chỉnh sửa">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm" title="Chi tiết">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" title="Xóa">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            //Phaan trang
            var table = $('.table').DataTable({
                "language": {
                    "search": "Tìm kiếm:",
                    "lengthMenu": "Hiển thị _MENU_ dòng mỗi trang",
                    "info": "Đang hiển thị _START_ đến _END_ của _TOTAL_ dòng",
                    "infoEmpty": "Không có dữ liệu để hiển thị",
                    "infoFiltered": "(lọc từ _MAX_ dòng)",
                    "paginate": {
                        "first": "Đầu",
                        "last": "Cuối",
                        "next": "›",
                        "previous": "‹"
                    },
                    "emptyTable": "Không có dữ liệu",
                    "zeroRecords": "Không tìm thấy dữ liệu phù hợp",
                    "searchPlaceholder": "Nhập từ khóa tìm kiếm...",
                },
                "pageLength": 5,
                "lengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "Tất cả"]],
                "stateSave": true,
                "ordering": true,
                "responsive": true,
                "autoWidth": false,
                "dom": "<'row'<'col-md-6'l><'col-md-6'f>>" +
                       "<'row'<'col-sm-12'tr>>" +
                       "<'row'<'col-md-5'i><'col-md-7'p>>"
            });

            //tìm kiếm realtime
            $('#customSearch').on('keyup', function () {
                table.search(this.value).draw();
            });
        });
    </script>
}
