@model Project_sem_3.Models.Type

@{
    ViewData["Title"] = "Thêm mới loại câu hỏi";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="card-title mb-0">Thêm mới loại câu hỏi</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <th class="bg-light" width="30%">
                                        <label asp-for="TypeName">Tên loại câu hỏi</label>
                                    </th>
                                    <td>
                                        <input asp-for="TypeName" class="form-control" placeholder="Nhập tên loại câu hỏi"/>
                                        <span asp-validation-for="TypeName" class="text-danger"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <th class="bg-light">
                                        <label asp-for="Status">Trạng thái</label>
                                    </th>
                                    <td>
                                        <select asp-for="Status" class="form-control">
                                            <option value="1">Hoạt động</option>
                                            <option value="0">Không hoạt động</option>
                                        </select>
                                        <span asp-validation-for="Status" class="text-danger"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <th class="bg-light">
                                        <label asp-for="Ord">Thứ tự hiển thị</label>
                                    </th>
                                    <td>
                                        <input asp-for="Ord" class="form-control" placeholder="Nhập thứ tự hiển thị"/>
                                        <span asp-validation-for="Ord" class="text-danger"></span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Tạo mới
                            </button>
                            <a asp-action="Index" class="btn btn-secondary ml-2">
                                <i class="fas fa-arrow-left"></i> Quay lại danh sách
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
